<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#E5E5E5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Information">

    <TextView
        android:id="@+id/tvinfo"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="46dp"
        android:drawableStart="@drawable/ic_back"
        android:drawablePadding="20dp"
        android:fontFamily="@font/lobsterregular"
        android:text="Information"
        android:textColor="#F0932B"
        android:textSize="50sp" />
        <TextView
            android:id="@+id/tvname"
            android:layout_width="343dp"
            android:layout_height="70dp"
            android:layout_below="@id/tvinfo"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/address_add"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Tên : Nguyễn Thị Cẩm Linh "
            android:textSize="25sp"
            android:textColor="#000000"
            android:textStyle="bold" />
    <TextView
        android:id="@+id/tvngaysinh"
        android:layout_width="343dp"
        android:layout_height="70dp"
        android:layout_below="@id/tvname"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/address_add"
        android:gravity="center_vertical"
        android:text="Ngày sinh : 17/03/2001 "
        android:paddingLeft="10dp"
        android:textSize="25sp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvmail"
        android:layout_width="343dp"
        android:layout_height="70dp"
        android:layout_below="@id/tvngaysinh"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/address_add"
        android:gravity="center_vertical"
        android:hint="Email : camlinh*****@gmail.com "
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvmatkhau"
        android:layout_width="343dp"
        android:layout_height="70dp"
        android:layout_below="@id/tvmail"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/address_add"
        android:gravity="center_vertical"
        android:hint="Mật khẩu :  "
        android:paddingLeft="10dp"
        android:textSize="25sp"
        android:textColor="#000000"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvgioitinh"
        android:layout_width="343dp"
        android:layout_height="70dp"
        android:layout_below="@id/tvmatkhau"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/address_add"
        android:gravity="center_vertical"
        android:text="Giới tính : Nữ "
        android:paddingLeft="10dp"
        android:textSize="25sp"
        android:textColor="#000000"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btnsave"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/tvgioitinh"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/drawable_shape"
        android:drawablePadding="100dp"
        android:hint="SAVE"
        android:paddingRight="20dp"
        android:textColorHint="#FFFFFF"
        android:textSize="35sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/line"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="103dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/sao"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="103dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/giohang"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="103dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/nguoi"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="103dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/shopping" />
        </FrameLayout>
    </LinearLayout>


</RelativeLayout>