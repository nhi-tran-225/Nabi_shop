<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    tools:context=".Address_add">

    <TextView
        android:id="@+id/tvaddress_add"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="46dp"
        android:layout_marginRight="30dp"
        android:drawableStart="@drawable/ic_back"
        android:drawablePadding="40dp"
        android:fontFamily="@font/lobsterregular"
        android:text="Address"
        android:textColor="#F0932B"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/map"
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tvaddress_add"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/address"
        android:drawableStart="@drawable/ic_map"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="Sử dụng vị trí hiện tại của tôi"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tinh"
        android:layout_width="346dp"
        android:layout_height="80dp"
        android:layout_below="@+id/map"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="27dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/address_add"
        android:drawablePadding="20dp"
        android:hint="Tỉnh/Thành phố"
        android:paddingLeft="10dp"
        android:textSize="22sp" />


    <EditText
        android:id="@+id/huyen"
        android:layout_width="346dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tinh"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/address_add"
        android:drawablePadding="20dp"
        android:paddingLeft="10dp"
        android:hint="Quận/Huyện"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/xa"
        android:layout_width="346dp"
        android:layout_height="80dp"
        android:layout_below="@+id/huyen"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/address_add"
        android:drawablePadding="20dp"
        android:paddingLeft="10dp"
        android:hint="Phường/Xã"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/sonha"
        android:layout_width="346dp"
        android:layout_height="80dp"
        android:layout_below="@+id/xa"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/address_add"
        android:drawablePadding="20dp"
        android:paddingLeft="10dp"
        android:hint="Tên đường,Tòa nhà,Số nhà"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btnadd"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/sonha"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/drawable_shape"
        android:drawablePadding="100dp"
        android:hint="ADD"
        android:paddingRight="20dp"
        android:textColorHint="#FFFFFF"
        android:textSize="35sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/line"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="103dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/sao"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="103dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/giohang"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="103dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/nguoi"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="103dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/shopping" />
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>