<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvsignup"
        android:layout_width="185dp"
        android:layout_height="61dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="120dp"
        android:fontFamily="@font/lobsterregular"
        android:text="Sign up"
        android:textColor="#F0932B"
        android:textSize="50sp" />

    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="358dp"
        android:layout_height="75dp"
        android:layout_below="@+id/tvsignup"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edit"
        android:drawableStart="@drawable/ic_phone_"
        android:drawablePadding="20dp"
        android:fontFamily="@font/lobsterregular"
        android:hint="Phone number"
        android:paddingLeft="10dp"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/edtusername"
        android:layout_width="358dp"
        android:layout_height="75dp"
        android:layout_below="@+id/edtPhone"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edit"
        android:drawableStart="@drawable/ic_user"
        android:drawablePadding="20dp"
        android:fontFamily="@font/lobsterregular"
        android:hint="User name"
        android:paddingLeft="10dp"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/edtpasword"
        android:layout_width="358dp"
        android:layout_height="75dp"
        android:layout_below="@+id/edtusername"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/lobsterregular"
        android:hint="Pass word"
        android:inputType="textPassword"
        android:textSize="22sp"
        android:drawableStart="@drawable/ic_lock"
        android:background="@drawable/edit"
        android:paddingLeft="10dp"
        android:drawablePadding="20dp"
        />

    <EditText
        android:id="@+id/edtcfpasword"
        android:layout_width="358dp"
        android:layout_height="75dp"
        android:layout_below="@+id/edtpasword"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/lobsterregular"
        android:hint="Confirm Pass word"
        android:inputType="textPassword"
        android:textSize="22sp"
        android:drawableStart="@drawable/ic_lock"
        android:background="@drawable/edit"
        android:paddingLeft="10dp"
        android:drawablePadding="20dp"
        />

    <Button
        android:id="@+id/btnsignup"
        android:layout_width="177dp"
        android:layout_height="58dp"
        android:layout_below="@+id/edtcfpasword"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="130dp"
        android:background="@drawable/drawable_shape"
        android:backgroundTint="#F0932B"
        android:drawableEnd="@drawable/ic_sg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="SIGN UP"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="22sp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv"
            android:layout_width="235dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:text="Already have a account?"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvsignin"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:drawablePadding="10dp"
            android:paddingLeft="5dp"
            android:text="Sign up"
            android:textColor="#F0932B"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>