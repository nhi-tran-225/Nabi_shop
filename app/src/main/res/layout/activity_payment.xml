<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".payment"
    android:background="@color/backgr_1"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/backgr_1"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <FrameLayout
            android:layout_width="85dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/back" />
        </FrameLayout>
        <TextView
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/lobsterregular"
            android:gravity="center"
            android:text="Payment"
            android:textColor="@color/cam"
            android:textSize="40dp" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/so1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/header"
        android:background="@drawable/payment1"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center|left"
            android:src="@drawable/paypal" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="top"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="70dp"
            android:text="Paypal"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cam"
            android:layout_gravity="center|right"
            android:text="Edit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/so2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/so1"
        android:background="@drawable/payment2"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center|left"
            android:src="@drawable/visa" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="top"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="70dp"
            android:text="Visa Card"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="15dp"
            android:text="Credit card "
            android:textSize="14dp"
            android:textStyle="bold"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cam"
            android:layout_gravity="center|right"
            android:text="Edit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/so3"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/so2"
        android:background="@drawable/payment2"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center|left"
            android:src="@drawable/mastercard" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="top"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="70dp"
            android:text="Master Card"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="15dp"
            android:text="Credit card "
            android:textSize="14dp"
            android:textStyle="bold"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cam"
            android:layout_gravity="center|right"
            android:text="Edit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp"/>
    </FrameLayout>
    <Button
        android:id="@+id/btnadd"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_below="@id/so3"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn"
        android:text="ADD"
        android:textStyle="bold"
        android:textSize="28dp"
        android:textColor="@color/white" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/line"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="103dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/sao2"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="103dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/bag2"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="103dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/giohang2"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="103dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/user"/>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>